<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <activity
            android:name=".uiwidgets.TabBarActivity"
            android:exported="false"
            android:label="@string/title_activity_tab_bar"
            android:theme="@style/Theme.MyApplication.NoActionBar" />
        <activity
            android:name=".uiwidgets.WidgetsScreenActivity"
            android:exported="false" />
        <activity
            android:name=".uiwidgets.TableLayoutActivity"
            android:exported="false" />
        <activity
            android:name=".uiwidgets.GridLayoutActivity"
            android:exported="false" />
        <activity
            android:name=".uiwidgets.ConstraintLayoutActivity"
            android:exported="false" />
        <activity
            android:name=".uiwidgets.LinearLayoutActivity"
            android:exported="false" />
        <activity
            android:name=".uiwidgets.ViewsActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>