<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layouts.EditProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/include"
            layout="@layout/customtoolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.115" />

        <TextView
            android:id="@+id/tvEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/include"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tvEditProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.882" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/baseline_arrow_back_ios_new_24"
            app:layout_constraintBottom_toBottomOf="@+id/include"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/ivProfilePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:foregroundGravity="center_horizontal"
            android:src="@drawable/oval"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEditProfile" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="40dp"
            android:layout_height="33dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@android:color/transparent"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivProfilePic"
            app:layout_constraintEnd_toEndOf="@id/ivProfilePic"
            app:srcCompat="@drawable/group" />

        <TextView
            android:id="@+id/tvProfileInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="Profile Information"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivProfilePic" />

        <TextView
            android:id="@+id/tvFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="First Name"
            android:textColor="#808498"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/tvProfileInformation"
            app:layout_constraintTop_toBottomOf="@id/tvProfileInformation" />

        <TextView
            android:id="@+id/tvLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Last Name"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProfileInformation" />

        <EditText
            android:id="@+id/etFirstName"
            android:layout_width="0dp"
            android:layout_height="48sp"
            android:layout_marginTop="4dp"
            android:lines="1"
            app:layout_constraintBottom_toTopOf="@id/tvAddress"
            android:layout_marginEnd="15dp"
            android:background="@drawable/textviewblackborder"
            android:hint="Enter first name"
            android:minHeight="48dp"
            android:paddingStart="12sp"
            android:paddingTop="9sp"
            android:paddingBottom="7sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/etLastName"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/tvFirstName"
            app:layout_constraintTop_toBottomOf="@id/tvFirstName" />

        <TextView
            android:id="@+id/fnError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Your Name"
            app:layout_constraintTop_toBottomOf="@id/etFirstName"
            app:layout_constraintStart_toStartOf="@id/etFirstName"
            android:visibility="invisible"
            android:textColor="#077579"/>


        <EditText
            android:id="@+id/etLastName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/textviewblackborder"
            android:hint="Enter last name "
            android:minHeight="48dp"
            android:paddingStart="12sp"
            android:paddingTop="9sp"
            android:paddingBottom="7sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/tvLastName"
            app:layout_constraintTop_toBottomOf="@id/tvLastName" />

        <TextView
            android:id="@+id/lnError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter last Name"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/etLastName"
            app:layout_constraintStart_toStartOf="@id/etLastName"
            android:textColor="#077579"
        />
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Address"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/etFirstName"
            app:layout_constraintTop_toBottomOf="@id/etFirstName" />

        <EditText
            android:id="@+id/etAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/textviewblackborder"
            android:hint="Enter address "
            android:minHeight="48dp"
            android:paddingStart="12sp"
            android:paddingTop="9sp"
            android:paddingBottom="7sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvAddress"
            app:layout_constraintTop_toBottomOf="@id/tvAddress" />
        <TextView
            android:id="@+id/adrError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Your address"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/etAddress"
            app:layout_constraintStart_toStartOf="@id/etAddress"
            android:textColor="#077579"
            />

        <TextView
            android:id="@+id/tvCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="City"
            android:textColor="#808498"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/etAddress"
            app:layout_constraintTop_toBottomOf="@id/etAddress" />


        <TextView
            android:id="@+id/tvState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="State"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/etLastName"
            app:layout_constraintTop_toBottomOf="@+id/etAddress" />

        <EditText
            android:id="@+id/etCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/textviewblackborder"
            android:hint="Enter city  "
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingStart="12sp"
            android:paddingTop="9sp"
            android:paddingBottom="7sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/etLastName"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/etAddress"
            app:layout_constraintTop_toBottomOf="@id/tvCity" />

        <TextView
            android:id="@+id/cityError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Enter city "
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/etCity"
            app:layout_constraintStart_toStartOf="@id/etCity"
            android:textColor="#077579"
            />

        <EditText
            android:id="@+id/etState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/textviewblackborder"
            android:hint="Enter state"
            android:inputType="text"
            android:minHeight="48dp"
            android:paddingStart="12sp"
            android:paddingTop="9sp"
            android:paddingBottom="7sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/tvState"
            app:layout_constraintTop_toBottomOf="@id/tvState" />

        <TextView
            android:id="@+id/stateError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please Enter state"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/etState"
            app:layout_constraintStart_toStartOf="@id/etState"
            android:textColor="#077579"
            />


        <TextView
            android:id="@+id/tvZipCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Zip Code"
            android:textColor="#808498"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/etCity"
            app:layout_constraintTop_toBottomOf="@id/etCity" />


        <TextView
            android:id="@+id/tvCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Country"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/etState"
            app:layout_constraintTop_toBottomOf="@+id/etState" />


        <EditText
            android:id="@+id/etZipCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/textviewblackborder"
            android:hint="Enter zip code"
            android:inputType="number"
            android:minHeight="48dp"
            android:paddingStart="12sp"
            android:paddingTop="9sp"
            android:paddingBottom="7sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/etLastName"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/etAddress"
            app:layout_constraintTop_toBottomOf="@id/tvZipCode" />

        <TextView
            android:id="@+id/zipError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter zip code"
            android:visibility="invisible"
            android:textColor="#077579"
            app:layout_constraintTop_toBottomOf="@id/etZipCode"
            app:layout_constraintStart_toStartOf="@id/etZipCode"
            />


        <Spinner
            android:id="@+id/spinnerSelectCountry"
            android:layout_width="190dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@id/etZipCode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/tvCountry"
            app:layout_constraintTop_toBottomOf="@id/tvCountry"
            app:layout_constraintTop_toTopOf="@id/etZipCode"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/tvMobileNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Mobile Number"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/etZipCode"
            app:layout_constraintTop_toBottomOf="@id/etZipCode" />

        <EditText
            android:id="@+id/etMobileNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/textviewblackborder"
            android:hint="Enter mobile no "
            android:inputType="number"
            android:minHeight="48dp"
            android:maxLength="10"
            android:paddingStart="12sp"
            android:paddingTop="9sp"
            android:paddingBottom="7sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvMobileNumber"
            app:layout_constraintTop_toBottomOf="@id/tvMobileNumber" />

        <TextView
            android:id="@+id/mobileError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter mobile number"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/etMobileNumber"
            app:layout_constraintStart_toStartOf="@id/etMobileNumber"
            android:textColor="#077579"
            />

        <TextView
            android:id="@+id/tvLoginInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Login Inforamtion"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/etMobileNumber"
            app:layout_constraintTop_toBottomOf="@id/etMobileNumber" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvemail"
            android:layout_width="366dp"
            android:layout_height="69dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/textviewblackborder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvLoginInformation"
            app:layout_constraintTop_toBottomOf="@id/tvLoginInformation">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="16sp"
                android:text="Change Email"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="38dp"
                android:text="johnjordan254@gmail.com"
                android:textSize="14sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="240dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#077579"
                android:text="Change"
                android:textAllCaps="false" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvpassword"
            android:layout_width="366dp"
            android:layout_height="69dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/textviewblackborder"
            app:layout_constraintEnd_toEndOf="@id/cvemail"
            app:layout_constraintStart_toStartOf="@+id/cvemail"
            app:layout_constraintTop_toBottomOf="@id/cvemail">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="27sp"
                android:text="Change Password"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="240dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#077579"
                android:text="Change"
                android:textAllCaps="false" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvPrivacy"
            android:layout_width="365dp"
            android:layout_height="138dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/cvpassword"
            app:layout_constraintStart_toStartOf="@id/cvpassword"
            app:layout_constraintEnd_toEndOf="@id/cvpassword"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="957dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="11dp"
                android:paddingBottom="10dp"
                android:text="Privacy"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="59dp"
                android:drawableStart="@drawable/combinedshape"
                android:drawablePadding="10dp"
                android:text="Use Face ID for Login" />

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="280dp"
                android:layout_marginTop="60dp"
                android:layout_marginEnd="10dp"
                android:thumb="@drawable/custom_thumb"
                app:track="@drawable/custom_track" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="99dp"
                android:layout_marginBottom="18dp"
                android:drawableStart="@drawable/menu"
                android:drawablePadding="10dp"
                android:text="Use Touch ID for Login" />

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginStart="280dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="10dp"
                android:thumb="@drawable/custom_thumb"
                app:track="@drawable/custom_track" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/buttonClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="38dp"
            android:backgroundTint="@color/white"
            android:text="Close Account"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvPrivacy" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>