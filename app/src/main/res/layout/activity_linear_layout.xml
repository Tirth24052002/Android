<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".uiwidgets.LinearLayoutActivity">

    <TextView
        android:id="@+id/tvHeader"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="@color/purple_500"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fill_the_following_details_to_sign_up"
        android:height="30dp"/>

    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:height="40dp"
        android:ems="10"
        android:hint="@string/enter_first_name"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:height="40dp"
        android:ems="10"
        android:hint="@string/enter_last_name"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:height="40dp"
        android:ems="10"
        android:hint="@string/enter_you_e_mail_address"
        android:inputType="textEmailAddress"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="@string/enter_mobile_number"
        android:inputType="numberSigned"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:height="40dp"
        android:ems="10"
        android:hint="@string/enter_your_password"
        android:inputType="textPassword"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/confimPassword"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:height="40dp"
        android:ems="10"
        android:background="@drawable/editext_background"
        android:hint="@string/confirm_password"
        android:textColorHint="@color/white"
        android:inputType="textPassword"
        android:minHeight="48dp" />


    <TextView
        android:id="@+id/genderTv"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_the_gender"
        android:textAlignment="center"
        android:textSize="20dp"/>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbFemale"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:text="@string/female"
            android:drawableEnd="@drawable/ic_woman_icon"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/ebMale"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:text="@string/male"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_man_icon"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signupbtn"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/white"
        android:background="@drawable/ripple_effect_button"
        android:text="@string/sign_up"
        android:textSize="18sp"/>
</LinearLayout>