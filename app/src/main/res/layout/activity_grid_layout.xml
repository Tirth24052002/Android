<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uiwidgets.GridLayoutActivity">
<RadioGroup
    android:id="@+id/radioGroup"
    >

    <RadioButton
        android:id="@+id/radioButtonOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:text="@string/one" />

    <RadioButton
        android:id="@+id/radioButtonTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:text="@string/two" />


    <RadioButton
        android:id="@+id/radioButtonThree"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:text="@string/three" />
</RadioGroup>
    <TextView
        android:id="@+id/selectedView"
        android:layout_width="164dp"
        android:layout_height="32dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginTop="20dp"
        android:text="@string/selected_button" />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/button2"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:text="@string/apply" />

    <ImageButton
        android:layout_width="155dp"
        android:layout_height="105dp"
        android:layout_row="0"
        android:id="@+id/btnImageButton"
        android:layout_column="1"
        android:layout_marginTop="200dp"
        android:src="@drawable/ic_toasticon" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_check_icon"
        />
</GridLayout>