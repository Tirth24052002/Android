<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".layouts.ConstraintScreenActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="358dp"
        android:layout_height="66dp"
        android:text="@string/enter_feedback_details_to_send_to_developer"
        android:textColor="@android:color/darker_gray"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/personName"
        android:layout_width="353dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:paddingStart="10sp"
        android:textColorHint="@android:color/darker_gray"
        android:autofillHints="username"
        android:background="@drawable/textviewshape"
        android:hint="@string/enter_your_full_name"
        android:inputType="text"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <EditText
        android:id="@+id/personEmail"
        android:layout_width="353dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:paddingStart="10sp"
        android:textColorHint="@android:color/darker_gray"
        android:autofillHints="emailAddress"
        android:background="@drawable/textviewshape"
        android:hint="@string/your_e_mail_address"
        android:inputType="textEmailAddress"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/personName"
        app:layout_constraintStart_toStartOf="@+id/personName"
        app:layout_constraintTop_toBottomOf="@id/personName" />


    <EditText
        android:id="@+id/editText"
        android:layout_width="351dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:autofillHints="password"
        android:textColorHint="@android:color/darker_gray"
        android:background="@drawable/textviewshape"
        android:hint="@string/your_password"
        android:paddingStart="10sp"
        android:inputType="textPassword"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/personEmail"
        app:layout_constraintStart_toStartOf="@+id/personEmail"
        app:layout_constraintTop_toBottomOf="@id/personEmail" />


    <Spinner
        android:id="@+id/spinnerfeedback"
        android:layout_width="350dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:spinnerMode="dropdown"
        android:background="@drawable/spinnerbg"
        android:popupBackground="@drawable/textviewshape"
        app:layout_constraintEnd_toEndOf="@+id/editText"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <EditText
        android:id="@+id/feedbacket"
        android:layout_width="347dp"
        android:layout_height="110dp"
        android:layout_marginTop="24dp"
        android:autofillHints="name"
        android:background="@drawable/textviewshape"
        android:hint="@string/feedback_details"
        android:inputType="text"
        android:lines="5"
        android:minHeight="48dp"
        android:paddingStart="10sp"
        app:layout_constraintEnd_toEndOf="@+id/spinnerfeedback"
        app:layout_constraintStart_toStartOf="@+id/spinnerfeedback"
        app:layout_constraintTop_toBottomOf="@id/spinnerfeedback" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="342dp"
        android:layout_height="62dp"
        android:layout_marginTop="32dp"
        android:buttonTint="@android:color/darker_gray"
        android:minHeight="48dp"
        android:text="@string/would_you_like_an_e_mail_response"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/feedbacket"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/feedbacket"
        app:layout_constraintTop_toBottomOf="@id/feedbacket"
        tools:ignore="TextSizeCheck,VisualLintButtonSize" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="335dp"
        android:layout_height="54dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="@string/send_feedback"
        android:textAllCaps="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/checkBox"
        app:layout_constraintStart_toStartOf="@+id/checkBox"
        app:layout_constraintTop_toBottomOf="@+id/checkBox"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="VisualLintButtonSize" />

</androidx.constraintlayout.widget.ConstraintLayout>