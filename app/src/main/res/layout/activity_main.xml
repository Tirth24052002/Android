<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <include
        android:id="@+id/include"
        layout="@layout/appbar" />

    <Button
        android:id="@+id/buttonLinearLayout"
        android:layout_width="229dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:text="Linear Layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <Button
        android:id="@+id/buttonRealtiveLayout"
        android:layout_width="223dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:text="Relative Layout"
        app:layout_constraintEnd_toEndOf="@+id/buttonLinearLayout"
        app:layout_constraintStart_toStartOf="@+id/buttonLinearLayout"
        app:layout_constraintTop_toBottomOf="@+id/buttonLinearLayout" />

    <Button
        android:id="@+id/buttonGridLayout"
        android:layout_width="214dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:text="Grid Layout"
        app:layout_constraintEnd_toEndOf="@+id/buttonRealtiveLayout"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/buttonRealtiveLayout"
        app:layout_constraintTop_toBottomOf="@+id/buttonRealtiveLayout" />

    <Button
        android:id="@+id/buttonConstraintLayout"
        android:layout_width="216dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:text="Constraint Layout"
        app:layout_constraintEnd_toEndOf="@+id/buttonGridLayout"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/buttonGridLayout"
        app:layout_constraintTop_toBottomOf="@+id/buttonGridLayout" />

    <Button
        android:id="@+id/buttonFrameLayout"
        android:layout_width="199dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:text="Frame Layout"
        app:layout_constraintEnd_toEndOf="@+id/buttonConstraintLayout"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toStartOf="@+id/buttonConstraintLayout"
        app:layout_constraintTop_toBottomOf="@+id/buttonConstraintLayout" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:text="Coordinator Layout"
        app:layout_constraintEnd_toEndOf="@+id/buttonFrameLayout"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="@+id/buttonFrameLayout"
        app:layout_constraintTop_toBottomOf="@+id/buttonFrameLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>