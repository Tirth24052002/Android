<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uicomponents.ButtonTypesActivity">

    <Button
        android:id="@+id/buttonRipple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/ripple_effect_button"
        android:text="Button with Ripple Effect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:text="ToggleButton"
        android:background="#FF3636"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.665"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRipple" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="111dp"
        android:layout_height="35dp"
        android:layout_marginTop="64dp"
        android:text="Toggle Button"
        app:layout_constraintEnd_toStartOf="@+id/toggleButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRipple" />

    <Switch
        android:id="@+id/switchbtn"
        android:layout_width="197dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="2dp"
        android:trackTint="@color/black"
        android:buttonTint="#FFEB3B"
        android:thumbTint="#E32222"
        android:checked="true"
        android:background="@color/purple_200"
        android:text="Button switch"
        app:layout_constraintEnd_toEndOf="@+id/toggleButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/appCompatToggleButton" />

    <androidx.appcompat.widget.AppCompatToggleButton
        android:id="@+id/appCompatToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/toggleButton"
        app:layout_constraintTop_toBottomOf="@+id/toggleButton"
        app:layout_constraintVertical_bias="0.087"
        android:background="@android:color/holo_orange_light"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="122dp"
        android:layout_height="32dp"
        android:layout_marginTop="44dp"
        android:text="App Compat Toggle Button  "
        app:layout_constraintEnd_toStartOf="@+id/appCompatToggleButton"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchMaterial"
        android:layout_width="193dp"
        android:layout_height="48dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="52dp"
        android:background="#ECD71F"
        android:outlineSpotShadowColor="@color/black"
        android:searchResultHighlightColor="@color/black"
        android:text="Material Switch"
        app:thumbTint="#2C2121"
        app:trackTint="#958383"
        app:layout_constraintEnd_toEndOf="@+id/switchbtn"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/switchbtn"
        app:layout_constraintTop_toBottomOf="@+id/switchbtn" />

    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="193dp"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:background="#F33232"
        android:text="Switch Compat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/switchMaterial"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/switchMaterial"
        app:layout_constraintTop_toBottomOf="@+id/switchMaterial"
        app:layout_constraintVertical_bias="0.217"
        app:thumbTint="#FF9800"
        app:trackTint="#A88655" />

</androidx.constraintlayout.widget.ConstraintLayout>